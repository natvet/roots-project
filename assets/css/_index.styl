.c-hero
    position relative
    padding-top 200px
    padding-bottom 200px
    bg 'hero-bg-mobile.jpg'
    background-size cover
    
.c-hero__title
    font-weight 600
    color rgba(255,255,255,.8)

.c-hero__img
    absolute()
    max-height 65%
    right 5%
    top 55%

.c-about-us
    color #959595
    
.c-about-us .o-section__title
    color #222626

.c-learn-more
    padding-top 0
    padding-bottom 0

.c-learn-more__item
    // min-height 275px
    padding 30px
    box-sizing border-box
    
.c-learn-more__title
    margin-top 0

.c-learn-more__item_fill-1
    background-color #43463e

.c-learn-more__item_fill-2
    background-color #37461d

.c-learn-more__item_fill-3
    background-color #091e28

.c-learn-more__item_fill-4
    background-color #73933c
    
@media all and (min-width: 450px)
    .c-hero__content
        width 60%
    .c-hero__img
        display block
    .c-learn-more__item
        padding 50px    
        