normalize-css()
base()

body
    color #ffffff
    position relative
h1
h2
h3
    font-weight 200
h1
h2
    font-size 32px
h3
    font-size 26px
h1
    margin-bottom 30px
h2
    margin-bottom 50px
h3 
    margin-bottom 20px
a
    link()
    font-weight 600
a
a:hover
    color inherit
    border 0
p
    paragraph()
    margin-bottom 30px
ul
    list-style none
.o-section
    padding 30px
.o-section__content
    max-width 1200px
    margin 0 auto
.u-60
    width 60%
.u-hidden
    display none
    
@media all and (min-width: 450px)
    .o-section
        padding 50px

@media all and (min-width: 768px)
    .u-col-1
        width 45%
    .u-col-2
        columns 2 45% 30px

@media all and (min-width: 992px)
    .o-section
        padding 80px
        